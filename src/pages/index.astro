---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
import Hero from '../components/Hero.astro';
import About from '../components/About.astro';
import Anatomy from '../components/Anatomy.astro';
import Menu from '../components/Menu.astro';
import Craft from '../components/Craft.astro';
import Reviews from '../components/Reviews.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="Burgerium | The Burger Tree Legacy in Chennai">
    <Navigation />
    <main>
        <Hero />
        
        <!-- Loud Rolling Marquee (Restored & Moved Up) -->
        <div class="marquee-container">
            <div class="marquee">
                <span>The Burger Tree Legacy</span>
                <span class="separator">✦</span>
                <span>Calicut Roots (1998)</span>
                <span class="separator">✦</span>
                <span>Coimbatore Favorites</span>
                <span class="separator">✦</span>
                <span>Peelamedu & RS Puram</span>
                <span class="separator">✦</span>
                <span>Palakkad Stadium Bypass</span>
                <span class="separator">✦</span>
                <span>Opening Soon in Chennai</span>
                <span class="separator">✦</span>
                <span>The Burger Tree Legacy</span>
                <span class="separator">✦</span>
                <span>Calicut Roots (1998)</span>
                <span class="separator">✦</span>
                <span>Coimbatore Favorites</span>
                <span class="separator">✦</span>
                <span>Peelamedu & RS Puram</span>
                <span class="separator">✦</span>
            </div>
        </div>

        <About />
        <Craft />
        <Anatomy />
        <Menu />
        <Reviews />
    </main>
    <Footer />
</Layout>

<style>
    /* Marquee Styles */
    .marquee-container {
        background: var(--brand-orange);
        color: #000;
        padding: 1rem 0;
        overflow: hidden;
        white-space: nowrap;
        position: relative;
        z-index: 10;
        border-top: 3px solid #000;
        border-bottom: 3px solid #000;
        transform: rotate(-2deg) scale(1.05); /* Aggressive tilt */
        margin: -6rem 0 6rem 0; /* Pulled up closer to Hero, more space below */
        box-shadow: 0 10px 0 rgba(0,0,0,0.5); /* Hard shadow */
    }

    .marquee {
        display: inline-block;
        animation: marquee 20s linear infinite;
    }

    .marquee span {
        font-family: var(--font-heading);
        font-weight: 900;
        font-size: 2.2rem; /* Bigger */
        text-transform: uppercase;
        margin: 0 2rem;
        letter-spacing: -1px;
        display: inline-flex;
        align-items: center;
        gap: 1rem;
    }

    /* Alternating styles for visual rhythm */
    .marquee span:nth-child(even) {
        -webkit-text-stroke: 1px #000;
        color: transparent; /* Hollow text effect */
    }

    .separator {
        display: none; /* Hide standard separator, using flex gap instead */
    }

    @media (max-width: 900px) {
        .marquee-container {
            transform: none; /* No tilt on mobile for clean stacking */
            margin: 0 0 3rem 0; /* Reset margins to standard flow */
            border-width: 2px;
            padding: 0.8rem 0;
            width: 100%;
            left: 0;
            margin-left: 0;
        }

        .marquee span {
            font-size: 1.4rem; /* Smaller text */
            margin: 0 1rem;
        }
    }

    @keyframes marquee {
        0% { transform: translateX(0); }
        100% { transform: translateX(-50%); }
    }
</style>
