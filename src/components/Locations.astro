---
const locations = [
    {
        city: 'Chennai',
        name: 'Nungambakkam',
        address: ['E Merck House', 'Haddows 2nd Street', 'Nungambakkam', 'Chennai-600006'],
        phone: null,
        map: null,
        comingSoon: true,
        launchDate: 'Q1 2025'
    }
];
---

<section id="locations" class="section-padding locations-section" aria-labelledby="locations-heading">
    <div class="container">
        <div class="locations-head scroll-reveal">
            <div class="head-content">
                <p class="eyebrow">Verified Locations</p>
                <h2 class="section-title" id="locations-heading">The <span class="text-orange">Destination</span></h2>
                <p class="lede">
                    Burgerium is launching exclusively in Chennai. Be the first to experience the future of burgers.
                </p>
            </div>
        </div>

        <div class="locations-grid" role="list">
            {locations.map((loc) => (
                <article class={`location-card scroll-reveal ${loc.comingSoon ? 'coming-soon' : ''}`} role="listitem">
                    {loc.comingSoon && (
                        <div class="coming-soon-badge">
                            <i class="fas fa-clock" aria-hidden="true"></i>
                            <span>Opening {loc.launchDate}</span>
                        </div>
                    )}
                    <div class="card-top">
                        <span class="pill">{loc.city}</span>
                        <h3>{loc.name}</h3>
                        <p class="address">
                            {loc.address.map((line) => (
                                <>
                                    {line}<br />
                                </>
                            ))}
                        </p>
                    </div>

                    {loc.comingSoon ? (
                        <div class="card-actions coming-soon-actions">
                            <div class="notify-box">
                                <p class="notify-text">Get notified when we open</p>
                                <a href="https://www.instagram.com/burgerium.in/" target="_blank" rel="noopener noreferrer" class="btn-primary btn-notify">
                                    <i class="fab fa-instagram" aria-hidden="true"></i>
                                    Follow for Updates
                                </a>
                            </div>
                        </div>
                    ) : (
                        <div class="card-actions">
                            <a class="btn-primary" href={loc.map} target="_blank" rel="noopener noreferrer">
                                Get Directions
                                <i class="fas fa-arrow-right" aria-hidden="true"></i>
                            </a>
                            {loc.phone && (
                                <a class="phone" href={`tel:${loc.phone.replace(/\s+/g, '')}`}>
                                    <i class="fas fa-phone" aria-hidden="true"></i>
                                    {loc.phone}
                                </a>
                            )}
                        </div>
                    )}
                </article>
            ))}
        </div>

        <!-- Expansion teaser -->
        <div class="expansion-teaser scroll-reveal delay-200">
            <div class="teaser-content">
                <i class="fas fa-map-marker-alt" aria-hidden="true"></i>
                <p>More locations coming to <strong>Kerala</strong> and <strong>Karnataka</strong> soon.</p>
            </div>
        </div>
    </div>
</section>

<style>
    .locations-section {
        background: #0a0a0a;
    }

    .locations-head {
        text-align: center;
        margin-bottom: 3rem;
    }

    .eyebrow {
        letter-spacing: 3px;
        text-transform: uppercase;
        font-size: 0.85rem;
        color: var(--brand-orange);
        margin-bottom: 0.5rem;
        font-weight: 600;
    }

    .lede {
        color: var(--text-gray);
        margin: 1rem auto 0;
        line-height: 1.7;
        max-width: 500px;
        font-size: 1.05rem;
    }

    .locations-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
        gap: 1.5rem;
        max-width: 800px;
        margin: 0 auto;
    }

    .location-card {
        background: #111;
        border: 1px solid rgba(255, 255, 255, 0.08);
        border-radius: 20px;
        padding: 2rem;
        display: flex;
        flex-direction: column;
        gap: 1.5rem;
        position: relative;
        overflow: hidden;
        transition: border-color 0.3s ease, box-shadow 0.3s ease;
    }

    .location-card:hover {
        border-color: rgba(250, 162, 39, 0.3);
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
    }

    .location-card::after {
        content: '';
        position: absolute;
        inset: 0;
        background: radial-gradient(circle at 80% 0%, rgba(250, 162, 39, 0.1), transparent 50%);
        pointer-events: none;
    }

    /* Coming soon badge */
    .coming-soon-badge {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        background: linear-gradient(135deg, var(--brand-orange), #e89520);
        color: #000;
        padding: 0.5rem 1rem;
        border-radius: 25px;
        font-weight: 700;
        font-size: 0.8rem;
        text-transform: uppercase;
        letter-spacing: 1px;
        width: fit-content;
        animation: pulse-badge 2s ease-in-out infinite;
    }

    @keyframes pulse-badge {
        0%, 100% { box-shadow: 0 0 0 0 rgba(250, 162, 39, 0.4); }
        50% { box-shadow: 0 0 0 8px rgba(250, 162, 39, 0); }
    }

    .card-top {
        position: relative;
        z-index: 2;
    }

    .card-top h3 {
        font-size: clamp(1.5rem, 3vw, 1.8rem);
        margin-bottom: 0.5rem;
        color: #fff;
    }

    .pill {
        display: inline-block;
        padding: 0.35rem 0.75rem;
        border-radius: 999px;
        background: rgba(250, 162, 39, 0.15);
        color: var(--brand-orange);
        font-weight: 700;
        letter-spacing: 1px;
        font-size: 0.75rem;
        text-transform: uppercase;
        margin-bottom: 0.75rem;
    }

    .address {
        color: var(--text-gray);
        line-height: 1.6;
        font-size: 1rem;
    }

    .card-actions {
        display: flex;
        justify-content: space-between;
        align-items: center;
        gap: 1rem;
        position: relative;
        z-index: 2;
    }

    .coming-soon-actions {
        flex-direction: column;
        align-items: stretch;
    }

    .notify-box {
        background: rgba(255, 255, 255, 0.03);
        border: 1px dashed rgba(255, 255, 255, 0.15);
        border-radius: 12px;
        padding: 1.25rem;
        text-align: center;
    }

    .notify-text {
        color: var(--text-gray);
        font-size: 0.9rem;
        margin-bottom: 1rem;
    }

    .btn-notify {
        width: 100%;
        justify-content: center;
        gap: 0.75rem;
    }

    .btn-notify i {
        font-size: 1.1rem;
    }

    .card-actions .btn-primary {
        padding: 0.9rem 1.8rem;
        font-size: 0.95rem;
    }

    .phone {
        color: #fff;
        font-weight: 700;
        letter-spacing: 0.5px;
        display: flex;
        align-items: center;
        gap: 0.5rem;
        transition: color 0.3s ease;
    }

    .phone:hover {
        color: var(--brand-orange);
    }

    /* Expansion teaser */
    .expansion-teaser {
        margin-top: 3rem;
        text-align: center;
    }

    .teaser-content {
        display: inline-flex;
        align-items: center;
        gap: 1rem;
        background: rgba(250, 162, 39, 0.08);
        border: 1px solid rgba(250, 162, 39, 0.2);
        padding: 1rem 2rem;
        border-radius: 50px;
    }

    .teaser-content i {
        color: var(--brand-orange);
        font-size: 1.1rem;
    }

    .teaser-content p {
        color: var(--text-gray);
        font-size: 0.95rem;
        margin: 0;
    }

    .teaser-content strong {
        color: var(--brand-orange);
    }

    @media (max-width: 768px) {
        .locations-grid {
            grid-template-columns: 1fr;
        }

        .location-card {
            padding: 1.5rem;
        }

        .card-actions {
            flex-direction: column;
            align-items: stretch;
        }

        .card-actions .btn-primary {
            width: 100%;
            justify-content: center;
        }

        .teaser-content {
            flex-direction: column;
            gap: 0.5rem;
            padding: 1.25rem 1.5rem;
            border-radius: 16px;
        }
    }
</style>
