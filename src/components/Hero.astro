---
const base = import.meta.env.BASE_URL.replace(/\/$/, '');
---

<section id="home" class="hero-wrapper" aria-label="Welcome to Burgerium">
    <!-- Dynamic Background -->
    <div class="bg-layer" aria-hidden="true">
        <img
            src={`${base}/chennai_hero.png`}
            alt=""
            class="parallax-img"
            loading="eager"
            fetchpriority="high"
        />
        <div class="overlay"></div>
    </div>

    <div class="container hero-grid">
        <!-- Text Content -->
        <div class="hero-text">
            <div class="launch-badge slide-in-1">
                Chennai Launch â€¢ Q1 2025
            </div>
            <h1 class="mega-title">
                <span class="line text-gradient slide-in-2">Every Bite Counts.</span>
            </h1>

            <p class="hero-desc slide-in-3">
                25 years of craft. House-baked buns. Charcoal-seared patties. Chennai's new burger destination.
            </p>

        </div>

        <!-- 3D Featured Product -->
        <div class="hero-visual">
            <div class="circle-bg pulse-anim" aria-hidden="true"></div>

            <!-- Hero burger image -->
            <img
                src={`${base}/monster_stack.png`}
                alt="The Monster Stack - Burgerium's signature multi-patty burger"
                class="hero-burger float-anim tilt-element"
                loading="eager"
            />

            <div class="float-card glass-card" aria-hidden="true">
                <span class="emoji">ðŸ”¥</span>
                <div class="card-text">
                    <strong>The Real Deal</strong>
                    <small>Only at Burgerium</small>
                </div>
            </div>
        </div>
    </div>

    <!-- Scroll indicator -->
    <div class="scroll-indicator" aria-hidden="true">
        <div class="mouse">
            <div class="wheel"></div>
        </div>
        <span>Scroll to explore</span>
    </div>
</section>

<style>
    .hero-wrapper {
        position: relative;
        height: 100vh;
        min-height: 700px;
        display: flex;
        align-items: center;
        overflow: hidden;
    }

    /* Background handling */
    .bg-layer {
        position: absolute;
        top: 0; left: 0; width: 100%; height: 100%;
        z-index: -1;
        overflow: hidden;
    }

    .parallax-img {
        width: 100%; height: 100%;
        object-fit: cover;
        transform: scale(1.1);
        filter: brightness(0.35);
        transition: transform 0.1s ease-out;
    }

    .overlay {
        position: absolute; inset: 0;
        background: linear-gradient(135deg, rgba(0,0,0,0.85) 0%, rgba(0,0,0,0.3) 100%);
    }

    /* Scroll Indicator */
    .scroll-indicator {
        position: absolute;
        bottom: 2rem;
        left: 50%;
        transform: translateX(-50%);
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 0.5rem;
        opacity: 0;
        animation: fadeInUp 1s ease forwards 1.5s;
    }

    .mouse {
        width: 24px;
        height: 40px;
        border: 2px solid rgba(255, 255, 255, 0.5);
        border-radius: 12px;
        position: relative;
    }

    .wheel {
        width: 4px;
        height: 8px;
        background: var(--brand-orange);
        border-radius: 2px;
        position: absolute;
        top: 8px;
        left: 50%;
        transform: translateX(-50%);
        animation: scrollWheel 2s ease-in-out infinite;
    }

    @keyframes scrollWheel {
        0%, 100% { opacity: 1; top: 8px; }
        50% { opacity: 0.3; top: 20px; }
    }

    @keyframes fadeInUp {
        from { opacity: 0; transform: translateX(-50%) translateY(20px); }
        to { opacity: 1; transform: translateX(-50%) translateY(0); }
    }

    .scroll-indicator span {
        font-size: 0.75rem;
        text-transform: uppercase;
        letter-spacing: 2px;
        color: rgba(255, 255, 255, 0.5);
    }

    .hero-grid {
        display: grid;
        grid-template-columns: 1.2fr 0.8fr;
        align-items: center;
        width: 100%;
        padding-top: 80px; /* Header offset */
    }

    /* Text Animations */
    .mega-title {
        font-size: clamp(4rem, 8vw, 7rem);
        line-height: 0.9;
        margin-bottom: 2rem;
        color: #fff;
    }

    .mega-title .line { display: block; }
    
    .text-gradient {
        background: linear-gradient(to right, #fff, var(--brand-orange));
        -webkit-background-clip: text;
        color: transparent;
    }

    .hero-desc {
        font-size: 1.25rem;
        color: #ccc;
        max-width: 500px;
        margin-bottom: 3rem;
        line-height: 1.6;
    }

    .launch-badge {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        background: rgba(250, 162, 39, 0.15);
        color: var(--brand-orange);
        border: 1px solid rgba(250, 162, 39, 0.4);
        padding: 0.4rem 0.9rem;
        border-radius: 999px;
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 1px;
        font-size: 0.8rem;
        margin-bottom: 1.5rem;
    }


    /* Staggered Entrance */
    .slide-in-1 { animation: slideUp 0.8s ease forwards; opacity: 0; animation-delay: 0.2s; }
    .slide-in-2 { animation: slideUp 0.8s ease forwards; opacity: 0; animation-delay: 0.4s; }
    .slide-in-3 { animation: slideUp 0.8s ease forwards; opacity: 0; animation-delay: 0.6s; }
    .slide-in-4 { animation: slideUp 0.8s ease forwards; opacity: 0; animation-delay: 0.8s; }

    /* Visual Side */
    .hero-visual {
        position: relative;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .circle-bg {
        position: absolute;
        width: 500px; height: 500px;
        background: radial-gradient(circle, rgba(250,162,39,0.15) 0%, transparent 70%);
        border-radius: 50%;
        z-index: -1;
        animation: pulse-glow 4s infinite ease-in-out;
    }

    .hero-burger {
        width: 120%; /* Large overflow */
        max-width: 600px;
        filter: drop-shadow(0 30px 50px rgba(0,0,0,0.6));
        transform-origin: center center;
    }

    .float-card {
        position: absolute;
        bottom: 10%; right: 0;
        background: rgba(20,20,20,0.8);
        border: 1px solid rgba(255,255,255,0.1);
        backdrop-filter: blur(10px);
        padding: 1rem 1.5rem;
        border-radius: 16px;
        display: flex;
        align-items: center;
        gap: 1rem;
        animation: float 5s ease-in-out infinite reverse;
    }

    .float-card .emoji { font-size: 2rem; }
    .float-card strong { display: block; color: var(--brand-orange); font-size: 1.1rem; }
    .float-card small { color: #888; text-transform: uppercase; font-size: 0.7rem; }

    @media (max-width: 900px) {
        .hero-wrapper {
            min-height: 100svh;
        }

        .hero-grid {
            grid-template-columns: 1fr;
            text-align: center;
            padding-top: 96px;
            height: auto;
            min-height: 100svh;
            display: flex;
            flex-direction: column;
            justify-content: center;
            padding-bottom: 4rem;
            gap: 1.5rem;
        }

        .overlay {
            background: linear-gradient(160deg, rgba(0,0,0,0.75) 0%, rgba(0,0,0,0.2) 100%);
        }

        .hero-text {
            display: flex;
            flex-direction: column;
            align-items: center;
            z-index: 2;
            order: 1;
        }

        .hero-desc {
            margin: 0 auto 1.25rem;
            font-size: 1.05rem;
            padding: 0 1rem;
            max-width: 95%;
            line-height: 1.7;
        }

        .hero-visual {
            margin-top: 0;
            z-index: 1;
            order: 2;
        }

        .hero-burger {
            width: 72%;
            max-width: 320px;
            margin-bottom: 1rem;
        }

        .mega-title {
            font-size: clamp(3rem, 11vw, 4rem);
            margin-bottom: 1.25rem;
            line-height: 1.05;
        }

        .mega-title .text-gradient {
            font-size: inherit;
            line-height: inherit;
            display: block;
            margin-top: 0;
        }

        /* Re-enable animations but faster */
        .slide-in-1, .slide-in-2, .slide-in-3, .slide-in-4 {
            opacity: 0;
            animation: slideUp 0.6s ease forwards;
        }

        .slide-in-1 { animation-delay: 0.1s; }
        .slide-in-2 { animation-delay: 0.2s; }
        .slide-in-3 { animation-delay: 0.3s; }
        .slide-in-4 { animation-delay: 0.4s; }

        .float-card {
            bottom: 5%;
            right: 10%;
            padding: 0.5rem 0.75rem;
            font-size: 0.85rem;
        }

        .float-card .emoji {
            font-size: 1.5rem;
        }

        .circle-bg {
            width: 300px;
            height: 300px;
        }

        .scroll-indicator {
            display: none;
        }

        .launch-badge {
            font-size: 0.75rem;
            margin-bottom: 1rem;
        }

    }

    @media (max-width: 400px) {
        .mega-title {
            font-size: clamp(2.6rem, 12vw, 3.2rem);
        }

        .hero-burger {
            width: 60%;
            max-width: 220px;
        }
    }
</style>

<script>
    // Parallax Effect for Background and Burger
    const prefersReducedMotion = window.matchMedia('(prefers-reduced-motion: reduce)').matches;
    const canHover = window.matchMedia('(hover: hover)').matches;

    if (!prefersReducedMotion && canHover) {
        document.addEventListener('mousemove', (e) => {
            const x = (window.innerWidth - e.pageX * 2) / 100;
            const y = (window.innerHeight - e.pageY * 2) / 100;

            const burger = document.querySelector('.hero-burger');
            // @ts-ignore
            if(burger) burger.style.transform = `translateX(${x}px) translateY(${y}px)`;
            
            const card = document.querySelector('.float-card');
            // @ts-ignore
            if(card) card.style.transform = `translateX(${-x}px) translateY(${-y}px)`;
        });
    }
</script>
