---
const base = import.meta.env.BASE_URL.replace(/\/$/, '');
---

<section id="home" class="hero-wrapper">
    <!-- Dynamic Background -->
    <div class="bg-layer">
        <video autoplay muted loop playsinline poster={`${base}/chennai_hero.png`} class="bg-video">
            <!-- Fallback to image if no video, using the generated Chennai image with a parallax effect -->
            <img src={`${base}/chennai_hero.png`} alt="Atmosphere" class="parallax-img">
        </video>
        <div class="overlay"></div>
    </div>

    <div class="container hero-grid">
        <!-- Text Content -->
        <div class="hero-text">
            <div class="badge-pill slide-in-1">
                <span class="dot"></span> The Burger Tree Legacy â€¢ Now in Chennai
            </div>
            
            <h1 class="mega-title">
                <span class="line slide-in-2">A Legacy of</span>
                <span class="line text-gradient slide-in-3">Flavor</span>
            </h1>

            <p class="hero-desc slide-in-4">
                From the heart of <b>Calicut (1998)</b> to the streets of <b>Coimbatore</b> & <b>Palakkad</b>. 
                We bring our signature house-made buns and flame-grilled perfection to Chennai.
                <b>Burgerium</b> is the evolution of a legend.
            </p>

            <div class="cta-box slide-in-5">
                <a href="#menu" class="btn-primary">
                    See The Menu <i class="fas fa-arrow-right"></i>
                </a>
            </div>
        </div>

        <!-- 3D Featured Product -->
        <div class="hero-visual">
            <div class="circle-bg pulse-anim"></div>
            <!-- Floating Burger with interaction -->
        <img src={`${base}/peri_burger.png`} alt="Lava Cheese Burger" class="hero-burger float-anim tilt-element">
            
            <div class="float-card glass-card">
                <span class="emoji">ðŸ”¥</span>
                <div class="card-text">
                    <strong>Lava Cheese</strong>
                    <small>Best Seller</small>
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    .hero-wrapper {
        position: relative;
        height: 100vh;
        min-height: 700px;
        display: flex;
        align-items: center;
        overflow: hidden;
    }

    /* Background handling */
    .bg-layer {
        position: absolute;
        top: 0; left: 0; width: 100%; height: 100%;
        z-index: -1;
    }

    .parallax-img {
        width: 100%; height: 100%;
        object-fit: cover;
        transform: scale(1.1); /* Zoomed in for parallax room */
        filter: brightness(0.4);
    }

    .overlay {
        position: absolute; inset: 0;
        background: linear-gradient(135deg, rgba(0,0,0,0.9) 0%, rgba(0,0,0,0.4) 100%);
    }

    .hero-grid {
        display: grid;
        grid-template-columns: 1.2fr 0.8fr;
        align-items: center;
        width: 100%;
        padding-top: 80px; /* Header offset */
    }

    /* Text Animations */
    .mega-title {
        font-size: clamp(4rem, 8vw, 7rem);
        line-height: 0.9;
        margin-bottom: 2rem;
        color: #fff;
    }

    .mega-title .line { display: block; }
    
    .text-gradient {
        background: linear-gradient(to right, #fff, var(--brand-orange));
        -webkit-background-clip: text;
        color: transparent;
    }

    .badge-pill {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        background: rgba(255,255,255,0.1);
        border: 1px solid rgba(255,255,255,0.2);
        padding: 8px 16px;
        border-radius: 50px;
        font-size: 0.9rem;
        text-transform: uppercase;
        letter-spacing: 1px;
        margin-bottom: 1.5rem;
        backdrop-filter: blur(5px);
    }

    .dot {
        width: 8px; height: 8px;
        background: var(--brand-orange);
        border-radius: 50%;
        box-shadow: 0 0 10px var(--brand-orange);
        animation: blink 2s infinite;
    }

    @keyframes blink { 0%,100% { opacity: 1; } 50% { opacity: 0.5; } }

    .hero-desc {
        font-size: 1.25rem;
        color: #ccc;
        max-width: 500px;
        margin-bottom: 3rem;
        line-height: 1.6;
    }

    /* Staggered Entrance */
    .slide-in-1 { animation: slideUp 0.8s ease forwards; opacity: 0; animation-delay: 0.1s; }
    .slide-in-2 { animation: slideUp 0.8s ease forwards; opacity: 0; animation-delay: 0.3s; }
    .slide-in-3 { animation: slideUp 0.8s ease forwards; opacity: 0; animation-delay: 0.5s; }
    .slide-in-4 { animation: slideUp 0.8s ease forwards; opacity: 0; animation-delay: 0.7s; }
    .slide-in-5 { animation: slideUp 0.8s ease forwards; opacity: 0; animation-delay: 0.9s; }

    /* Visual Side */
    .hero-visual {
        position: relative;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .circle-bg {
        position: absolute;
        width: 500px; height: 500px;
        background: radial-gradient(circle, rgba(250,162,39,0.15) 0%, transparent 70%);
        border-radius: 50%;
        z-index: -1;
        animation: pulse-glow 4s infinite ease-in-out;
    }

    .hero-burger {
        width: 120%; /* Large overflow */
        max-width: 600px;
        filter: drop-shadow(0 30px 50px rgba(0,0,0,0.6));
        transform-origin: center center;
    }

    .float-card {
        position: absolute;
        bottom: 10%; right: 0;
        background: rgba(20,20,20,0.8);
        border: 1px solid rgba(255,255,255,0.1);
        backdrop-filter: blur(10px);
        padding: 1rem 1.5rem;
        border-radius: 16px;
        display: flex;
        align-items: center;
        gap: 1rem;
        animation: float 5s ease-in-out infinite reverse;
    }

    .float-card .emoji { font-size: 2rem; }
    .float-card strong { display: block; color: var(--brand-orange); font-size: 1.1rem; }
    .float-card small { color: #888; text-transform: uppercase; font-size: 0.7rem; }

    @media (max-width: 900px) {
        .hero-grid { 
            grid-template-columns: 1fr; 
            text-align: center;
            padding-top: 100px;
        }
        
        .hero-text {
            display: flex;
            flex-direction: column;
            align-items: center;
            z-index: 2; /* Text on top */
        }

        .hero-desc { 
            margin: 0 auto 2rem; 
            font-size: 1rem;
            padding: 0 1rem;
        }

        .hero-visual { 
            margin-top: 2rem; 
            z-index: 1;
        }

        .hero-burger { 
            width: 80%; 
            max-width: 320px; 
            margin-bottom: 2rem;
        }

        .mega-title { 
            font-size: 3rem; 
            margin-bottom: 1rem;
        }
        
        /* Re-enable animations but faster/simpler */
        .slide-in-1, .slide-in-2, .slide-in-3, .slide-in-4, .slide-in-5 { 
            opacity: 0; 
            animation: slideUp 0.6s ease forwards; 
        }
        
        .float-card {
            bottom: -20px;
            right: 10%;
            padding: 0.8rem 1rem;
        }
    }
</style>

<script>
    // Parallax Effect for Background and Burger
    document.addEventListener('mousemove', (e) => {
        const x = (window.innerWidth - e.pageX * 2) / 100;
        const y = (window.innerHeight - e.pageY * 2) / 100;

        const burger = document.querySelector('.hero-burger');
        // @ts-ignore
        if(burger) burger.style.transform = `translateX(${x}px) translateY(${y}px)`;
        
        const card = document.querySelector('.float-card');
        // @ts-ignore
        if(card) card.style.transform = `translateX(${-x}px) translateY(${-y}px)`;
    });
</script>
