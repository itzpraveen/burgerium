---
const base = import.meta.env.BASE_URL.replace(/\/$/, '');
---

<footer id="locations">
    <!-- Top Bar Call to Action -->
    <div class="footer-cta">
        <div class="container cta-content">
            <h3>Hungry? Visit us today.</h3>
            <a href="#menu" class="btn btn-primary inverted">See Locations</a>
        </div>
    </div>

    <!-- Main Footer -->
    <div class="main-footer">
        <div class="container">
            <div class="footer-grid">
                <!-- Brand Col -->
                <div class="f-col brand-col">
                    <img src={`${base}/logo.png`} alt="Burgerium" class="f-logo">
                    <p>Born in Calicut (1998).<br>Elevated in Chennai (2025).</p>
                    <div class="socials">
                        <a href="#"><i class="fab fa-instagram"></i></a>
                        <a href="#"><i class="fab fa-facebook-f"></i></a>
                    </div>
                </div>

                <!-- Locs -->
                <div class="f-col">
                    <h5>Locations</h5>
                    <ul class="f-list">
                        <li><span>Coimbatore</span> <small>Peelamedu & RS Puram</small></li>
                        <li><span>Palakkad</span> <small>Stadium Bypass Rd</small></li>
                        <li class="active"><span>Chennai</span> <small>Anna Nagar (Coming Soon)</small></li>
                    </ul>
                </div>

                <!-- Links -->
                <div class="f-col">
                    <h5>Quick Links</h5>
                    <ul class="f-list">
                        <li><a href="#about">Our Roots</a></li>
                        <li><a href="#menu">Menu Highlights</a></li>
                        <li><a href="#contact">Contact</a></li>
                    </ul>
                </div>
            </div>

            <div class="sub-footer">
                <p>&copy; 2025 Burgerium. A Burger Tree Brand Legacy.</p>
            </div>
        </div>
    </div>
</footer>

<style>
    /* CTA Bar */
    .footer-cta {
        background-color: #000; 
        /* Slightly different from header to differentiate top/bottom */
        padding: 3rem 0;
        border-bottom: 1px solid rgba(255,255,255,0.1);
    }

    .cta-content {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .cta-content h3 {
        color: #fff;
        font-size: 2rem;
    }

    /* Main Footer */
    .main-footer {
        background: var(--brand-orange); 
        color: #000;
        padding-top: 4rem;
    }

    .footer-grid {
        display: grid;
        grid-template-columns: 1.5fr 1fr 1fr;
        gap: 3rem;
        padding-bottom: 3rem;
        border-bottom: 1px solid rgba(0,0,0,0.1);
    }

    .f-logo {
        width: 200px;
        margin-bottom: 1.5rem;
    }

    .brand-col p {
        font-weight: 500;
        margin-bottom: 1.5rem;
    }

    .socials {
        display: flex;
        gap: 1rem;
    }

    .socials a {
        width: 36px;
        height: 36px;
        background: #000;
        color: var(--brand-orange);
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 50%;
        transition: 0.3s;
    }

    .socials a:hover {
        transform: translateY(-3px);
        background: #fff;
        color: #000;
    }

    .f-col h5 {
        font-weight: 800;
        text-transform: uppercase;
        margin-bottom: 1.5rem;
        font-size: 1.1rem;
    }

    .f-list {
        list-style: none;
    }

    .f-list li {
        margin-bottom: 1rem;
        display: flex;
        flex-direction: column;
    }

    .f-list li span {
        font-weight: 700;
        font-size: 1.05rem;
    }

    .f-list li small {
        font-size: 0.85rem;
        opacity: 0.7;
    }

    .f-list li.active span {
        text-decoration: underline;
    }

    .sub-footer {
        padding: 1.5rem 0;
        text-align: center;
        font-size: 0.85rem;
        font-weight: 500;
        opacity: 0.8;
    }

    @media (max-width: 768px) {
        .cta-content { flex-direction: column; text-align: center; gap: 1rem; }
        .footer-grid { grid-template-columns: 1fr; text-align: center; }
        .brand-col { display: flex; flex-direction: column; align-items: center; }
    }
</style>
