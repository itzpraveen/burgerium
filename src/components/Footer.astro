---
const base = import.meta.env.BASE_URL.replace(/\/$/, '');
const currentYear = new Date().getFullYear();

const quickLinks = [
    { href: '#about', label: 'Our Roots' },
    { href: '#menu', label: 'Menu Highlights' },
    { href: '#locations', label: 'Locations' },
];

const socialLinks = [
    { href: 'https://instagram.com', icon: 'fa-instagram', label: 'Follow us on Instagram' },
    { href: 'https://facebook.com', icon: 'fa-facebook-f', label: 'Follow us on Facebook' },
];
---

<footer role="contentinfo">
    <!-- Top Bar Call to Action -->
    <div class="footer-cta">
        <div class="container cta-content">
            <h3>Craving Excellence? Visit Us.</h3>
            <a href="#locations" class="btn-primary">
                See Locations
                <i class="fas fa-arrow-right" aria-hidden="true"></i>
            </a>
        </div>
    </div>

    <!-- Main Footer -->
    <div class="main-footer">
        <div class="container">
            <div class="footer-grid">
                <!-- Brand Col -->
                <div class="f-col brand-col">
                    <img src={`${base}/logo.png`} alt="Burgerium" class="f-logo" loading="lazy" />
                    <p class="legal-line">A Unit of Urban Eats and Kitchen LLP</p>
                    <div class="socials" role="list" aria-label="Social media links">
                        {socialLinks.map((social) => (
                            <a
                                href={social.href}
                                target="_blank"
                                rel="noopener noreferrer"
                                aria-label={social.label}
                                role="listitem"
                            >
                                <i class={`fab ${social.icon}`} aria-hidden="true"></i>
                            </a>
                        ))}
                    </div>
                </div>

                <!-- Locations -->
                <div class="f-col">
                    <h5>Locations</h5>
                    <ul class="f-list" role="list">
                        <li class="active" role="listitem">
                            <span>Chennai</span>
                            <small>Anna Nagar (Opening Q1 2025)</small>
                        </li>
                    </ul>
                </div>

                <!-- Links -->
                <nav class="f-col" aria-label="Footer navigation">
                    <h5>Quick Links</h5>
                    <ul class="f-list" role="list">
                        {quickLinks.map((link) => (
                            <li role="listitem">
                                <a href={link.href}>{link.label}</a>
                            </li>
                        ))}
                    </ul>
                </nav>
            </div>

            <div class="sub-footer">
                <p>&copy; {currentYear} Burgerium. <strong>A Unit of Urban Eats and Kitchen LLP</strong>.</p>
            </div>
        </div>
    </div>
</footer>

<style>
    /* CTA Bar */
    .footer-cta {
        background: linear-gradient(135deg, #0a0a0a 0%, #111 100%);
        padding: 4rem 0;
        border-bottom: 1px solid rgba(255,255,255,0.08);
    }

    .cta-content {
        display: flex;
        justify-content: space-between;
        align-items: center;
        gap: 2rem;
    }

    .cta-content h3 {
        color: #fff;
        font-size: clamp(1.5rem, 3vw, 2rem);
    }

    .cta-content .btn-primary {
        flex-shrink: 0;
    }

    /* Main Footer */
    .main-footer {
        background: var(--brand-orange);
        color: #000;
        padding-top: 4rem;
    }

    .footer-grid {
        display: grid;
        grid-template-columns: 1.5fr 1fr 1fr;
        gap: 3rem;
        padding-bottom: 3rem;
        border-bottom: 1px solid rgba(0,0,0,0.1);
    }

    .f-logo {
        width: 180px;
        margin-bottom: 1.5rem;
    }

    .brand-col p {
        font-weight: 500;
        margin-bottom: 1rem;
        line-height: 1.6;
    }

    .legal-line {
        font-weight: 700;
        text-transform: uppercase;
        font-size: 0.75rem;
        letter-spacing: 0.5px;
        opacity: 0.7;
        margin-bottom: 1.5rem;
    }

    .socials {
        display: flex;
        gap: 0.75rem;
    }

    .socials a {
        width: 40px;
        height: 40px;
        background: #000;
        color: var(--brand-orange);
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 50%;
        transition: transform 0.3s ease, background 0.3s ease;
        font-size: 1rem;
    }

    .socials a:hover {
        transform: translateY(-3px);
        background: #fff;
        color: #000;
    }

    .socials a:focus-visible {
        box-shadow: 0 0 0 3px rgba(0, 0, 0, 0.3);
    }

    .f-col h5 {
        font-weight: 800;
        text-transform: uppercase;
        margin-bottom: 1.5rem;
        font-size: 1rem;
        letter-spacing: 1px;
    }

    .f-list {
        list-style: none;
    }

    .f-list li {
        margin-bottom: 0.75rem;
    }

    .f-list li a {
        font-weight: 600;
        transition: opacity 0.3s ease;
        display: inline-block;
        padding: 0.25rem 0;
    }

    .f-list li a:hover {
        opacity: 0.7;
    }

    .f-list li a:focus-visible {
        box-shadow: var(--focus-ring-light);
        border-radius: 4px;
    }

    .f-list li span {
        font-weight: 700;
        font-size: 1rem;
        display: block;
    }

    .f-list li small {
        font-size: 0.8rem;
        opacity: 0.7;
        display: block;
        margin-top: 0.25rem;
    }

    .f-list li.active span {
        position: relative;
    }

    .f-list li.active span::after {
        content: '';
        position: absolute;
        bottom: -2px;
        left: 0;
        width: 100%;
        height: 2px;
        background: #000;
    }

    .sub-footer {
        padding: 1.5rem 0;
        text-align: center;
        font-size: 0.8rem;
        font-weight: 500;
        opacity: 0.8;
    }

    .sub-footer strong {
        font-weight: 700;
    }

    @media (max-width: 768px) {
        .footer-cta {
            padding: 3rem 0;
        }

        .cta-content {
            flex-direction: column;
            text-align: center;
            gap: 1.5rem;
        }

        .cta-content .btn-primary {
            width: 100%;
            justify-content: center;
        }

        .footer-grid {
            grid-template-columns: 1fr;
            text-align: center;
            gap: 2.5rem;
        }

        .brand-col {
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        .socials {
            justify-content: center;
        }

        .f-list li.active span::after {
            left: 50%;
            transform: translateX(-50%);
            width: 50%;
        }
    }
</style>
